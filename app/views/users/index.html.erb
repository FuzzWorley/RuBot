<p id="notice"><%= notice %></p>

<h1>RubyND Slack Users</h1>
  <table>
    <thead>
      <tr>
        <th>Profile Pic</th>
        <th>User name</th>
        <th>Real name</th>
        <th>Slack ID</th>
        <th>Email</th>
        <th>Member since</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag(user.pic) %></td>
          <td><%= user.user_name %></td>
          <td><%= user.real_name %></td>
          <td><%= user.slack_id %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at.strftime("%F") %></td>

          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: "Please be sure you are deleting the correct user!! There is no way to add them back aside from restarting the program." } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
<br>
<br>
