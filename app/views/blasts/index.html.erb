<div class="ui grid">
  <div class="two wide column"></div>
  <div class="twelve wide column">
    <p id="notice"><%= notice %></p>

    <div class="ui segment" id="spacer">
      <div class="header">
        <h1>Blasts</h1>
        <i class="help teal inline circular icon link" data-html="<div class='header'>Blasts</div><div class='content'> Blasts are sent to <strong>all</strong> members of the Slack team at the time of creation. <br><br>When you click 'create',<%=" #{Rails.application.config.client.self.name}" %> will message every user on your team!</div>">
        </i>
        
        <button class="ui labeled teal icon small button right floated ">
          <i class="write icon"></i>
          <%= link_to 'New Blast', new_blast_path %>
        </button>
      </div>
      <div class="ui divider"></div>


      <table class="ui celled striped table">
        <thead>
          <tr>
            <th class="nine wide">Text</th>
            <th>Reach</th>
            <th>Sent</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @blasts.each do |blast| %>
          <tr>
            <td><%= blast.text %></td>
            <td><%= blast.reach %></td>
            <td><%= blast.created_at.strftime("%a %b %e %Y %T") %></td>
            <td><%= link_to 'Show', blast, :class => "ui teal basic label" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="two wide column"></div>
</div>

<script type="text/javascript" charset="utf-8" >
$('.inline.icon')
  .popup({
    inline: true
  })
;
</script>
