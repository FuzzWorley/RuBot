<p id="notice"><%= notice %></p>

<div class="header">
  <h1>Messages</h1>
  <%= link_to 'Create a New Message', new_message_path if current_admin %>
</div>
<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Text</th>
      <th>Summary</th>
      <th>Delay</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.sort.each do |message| %>
      <tr>
        <td><%= message.id %></td>
        <td><%= message.text %></td>
        <td><%= message.project %></td>
        <td><%= message.delay %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) if current_admin %></td>
        <!-- <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>